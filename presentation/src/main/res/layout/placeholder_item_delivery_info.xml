<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_radius_list_item"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_date_placeholder"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="3dp"
            android:background="#AAAAAA"
            app:layout_constraintBottom_toTopOf="@id/tv_time_placeholder"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/tv_time_placeholder"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginStart="25dp"
            android:background="#AAAAAA"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_date_placeholder" />

        <TextView
            android:id="@+id/tv_text_location_placeholder"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="3dp"
            android:background="#AAAAAA"
            app:layout_constraintBottom_toTopOf="@id/tv_text_state_placeHolder"
            app:layout_constraintLeft_toRightOf="@id/tv_date_placeholder"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:background="#AAAAAA"
            app:layout_constraintBottom_toBottomOf="@id/tv_text_location_placeholder"
            app:layout_constraintLeft_toRightOf="@id/tv_text_location_placeholder"
            app:layout_constraintTop_toTopOf="@id/tv_text_location_placeholder" />

        <TextView
            android:id="@+id/tv_text_state_placeHolder"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:background="#BBBBBB"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_date_placeholder"
            app:layout_constraintTop_toBottomOf="@id/tv_text_location_placeholder" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:background="#CCCCCC"
            app:layout_constraintBottom_toBottomOf="@id/tv_text_state_placeHolder"
            app:layout_constraintLeft_toRightOf="@id/tv_text_state_placeHolder"
            app:layout_constraintTop_toTopOf="@id/tv_text_state_placeHolder" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
